<!doctype html>
<html>
  <head>
    <title>The ToDoList!</title>
    <meta charset="utf-8">
  </head>
  <body>
    <h1>Welcome to ToDoList!!</h1>  
    <p> Your current list of tasks:</p>
    <ul>
      <% @tasks.each do |item| %>
          <li> <a href="/complete/<%= item.id %>"> <%= item.content %></a> 
          <% if item.complete? %>
            <h6>Complete!</h6>
            <a href="/delete_task/<%= item.id %>">Delete task</button> 
          <%end%>
      </li> 
      <% end %>
    </ul>
    <a href="/new_task">Add new task</a>
  </body>
</html>